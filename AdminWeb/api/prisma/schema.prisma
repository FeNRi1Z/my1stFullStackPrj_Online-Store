generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int             @id @default(autoincrement())
  name      String
  username  String          @unique
  password  String
  role      String          @default("client")
  status    String          @default("use")
  address   String?
  phone     String?
  profile   String          @default("noIMGFile")
  cartQty   Int             @default(0)
  cartTotal Int             @default(0)
  cartItems ProductOnCart[]
  orders    Order[]
}

model Product {
  id         Int               @id @default(autoincrement())
  name       String
  cost       Int
  price      Int
  quantity   Int               @default(0)
  img        String            @default("noIMGFile")
  status     String            @default("use")
  desc       String?
  authorId   Int               @default(1)
  author     Author            @relation(fields: [authorId], references: [id])
  categories ProductCategory[]
  cartItems  ProductOnCart[]
  orderItems ProductOnOrder[]
}

model Category {
  id       Int               @id @default(autoincrement())
  name     String
  products ProductCategory[]
}

model ProductCategory {
  productId  Int
  categoryId Int      @default(1)
  product    Product  @relation(fields: [productId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([productId, categoryId])
}

model Author {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model ProductOnCart {
  userId    Int
  productId Int
  quantity  Int     @default(1)
  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([userId, productId])
}

model Order {
  id           Int              @id @default(autoincrement())
  userId       Int
  orderTotal   Int?
  status       String           @default("To be paid")
  address      String
  phone        String
  orderDate    DateTime         @default(now())
  paymentSlipIMG String?
  paymentDate  DateTime?
  parcelCode   String?
  user         User             @relation(fields: [userId], references: [id])
  orderItems   ProductOnOrder[]
}

model ProductOnOrder {
  orderId      Int
  productId    Int
  productPrice Int
  quantity     Int     @default(1)
  order        Order   @relation(fields: [orderId], references: [id])
  product      Product @relation(fields: [productId], references: [id])

  @@id([orderId, productId])
}
